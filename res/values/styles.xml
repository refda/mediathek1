<resources>

    <style name="Theme.Mediathek" parent="@style/Holo.Theme.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_mediathek</item>
        <item name="popupMenuStyle">@style/PopupMenu.Mediathek</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mediathek</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Mediathek</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Mediathek</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Mediathek</item>
        <item name="actionModeBackground">@drawable/cab_background_top_mediathek</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_mediathek</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Mediathek</item>

                <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Mediathek.Widget</item>

    </style>

    <style name="ActionBar.Solid.Mediathek" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_mediathek</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_mediathek</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_mediathek</item>
        <item name="progressBarStyle">@style/ProgressBar.Mediathek</item>
    </style>

    <style name="ActionBar.Transparent.Mediathek" parent="@style/Widget.Sherlock.ActionBar">
        <item name="background">@drawable/ab_transparent_mediathek</item>
        <item name="progressBarStyle">@style/ProgressBar.Mediathek</item>
    </style>
	
    <style name="PopupMenu.Mediathek" parent="@style/Widget.Sherlock.ListPopupWindow">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mediathek</item>	
    </style>
	
    <style name="DropDownListView.Mediathek" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_mediathek</item>
    </style>
 
     <style name="ListView.Mediathek" parent="@style/Sherlock.__Widget.Holo.ListView">
        <item name="android:listSelector">@drawable/selectable_background_mediathek</item>
    </style>
    
    <style name="ActionBarTabStyle.Mediathek" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_mediathek</item>
    </style>
	
    <style name="DropDownNav.Mediathek" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="android:background">@color/abs__bright_foreground_holo_light</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mediathek</item>
        <item name="android:dropDownSelector">@color/abs__bright_foreground_holo_light</item>
       
    </style>
    
    <style name="ProgressBar.Mediathek" parent="@style/Widget.Sherlock.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_mediathek</item>
    </style>
    
    <style name="ActionButton.CloseMode.Mediathek" parent="@style/Widget.Sherlock.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_mediathek</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Mediathek.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Mediathek</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mediathek</item>
    </style>
    
    <style name="Theme.Mediathek.TransparentBackground">
          <item name="android:background">@color/semitransparentGrey</item>
        
    </style>
 
     

</resources>